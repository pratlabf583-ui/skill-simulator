    alert("âŒ ë¹„ë°€ë²ˆí˜¸ê°€ í‹€ë ¸ìŠµë‹ˆë‹¤.");
    return;
  }

  alert("âœ… ê´€ë¦¬ì ëª¨ë“œ í•´ì œ(EDIT ê°€ëŠ¥)");
  state.adminUnlocked = true;
  setViewerMode(false);
  state.mode = "EDIT";
  draw();
});

